.music-tab
        display: flex
        height: 30px
        line-height: 30px
        color: #DDDDDD
        text-align: center
        .tab-item
         flex: 1
.music-view
        position: fixed
        top: 88px
        left: 0
        bottom: 52px
        width: 100%
        background-color: #212121
.nav-link, .link
  display: block
  color: inherit
  text-decoration: none
  &.active
    color: #FFD700
    border-bottom: 2px solid #FFD700
.translate-enter
  transform: translate3d(100%,0,0)
  &.translate-enter-active
    transition: transform 0.3s
    transform: translate3d(0,0,0)
