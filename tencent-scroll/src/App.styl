.music-tab
    display flex
    position: fixed
    right: 0
    bottom: 0
    left: 0
    background #ffffff
    .tab-item    
        flex: 1
    .tencent 
        position fixed
        display: flex
        height: 50px
        width 100%
        font-size: 10px
        align-items: flex-end
        bottom: 0
        z-index 9999999
        text-align: center
        background: #ffffff
        .nav-link
            display: block
            color: inherit
            text-decoration: none
            &:active
              color: #f5f5f
        .img
            position: relative;
            font-size: 16px;
            font-weight: 400;
            font-style: normal;
            font-variant: normal;
            line-height: 1;
            vertical-align: -2px;
            text-transform: none;
            -webkit-font-smoothing: antialiased;
            speak: none;
        .img_1
            width 24px
            height 24px
.music-view
    position fixed
    width 100%
    top 0
    background #ffffff
     