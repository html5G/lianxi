.Recommend
    position fixed
    width 100%
    height 750px
    // background red
    .scroll
        height 100%
        width 100% 
        a
           text-decoration:none   
    .underside
        height 150px
        width 100%
        background: #ffffff
    .slider-container
        // z-index 99999
        height: 180px
        position: relative
        .slider-nav
            display: block
            width: 100%
            height: 100%
        .swiper-pagination-bullet-active
            background-color: #DDDDDD
    .Gift-scroll
        position fixed
        width 100%
        background-size: 100%
        display: flex;
        .Gift
            flex: 1;
            margin: 8px;
            border: 0;
            background: center no-repeat;
            background-size: 100%;
            display: block;
            padding: 0;
    .zhibo
        position: relative;
        list-style: none;
        padding: 0;
        margin: 0;
        width: 100%;
        // height: 100px;
        margin-top 100px
        .zhibo_1
            margin-bottom 5px
            .zhibo-img
                display: inline-block;
                width: 48%;
                vertical-align: top;
                .zhibo-img-1
                    overflow: hidden;
                    position: relative;
                    border-radius: 4px;
            .zhibo-right
                padding 0
                margin 0               
                display inline-block
                position absolute
                overflow: hidden
                .zhibo-biaoqian
                    width 180px
                    font-size: 16px;
                    font-weight: 700;
                    line-height: 15px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                .zhibo-name
                    // margin-top: 5px;
                    position relative
                    font-size: 14px;
                    line-height: 20px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    word-wrap: normal;
                .zhibo-zb
                    position relative
                    color: #777;
                    .zhibo-zb-i
                        margin-right: 15px;
                        color: #23b8ff;
                        .zhibo-i
                            display: inline-block;
                            margin-right: 4px;
                            width: 10px;
                            height: 10px;
                            vertical-align: middle;
                            background: url(https://9.url.cn/edu/mobilev2/pages/index/img/inclass.ede0540.gif) no-repeat;
                            background-size: 10px 10px;
    .custom
        display block
        .custom-title
            position: relative;
            height: 22px;
            font-size: 16px;
            line-height: 22px;
            text-align: center;
            letter-spacing: 4px;
            color: #777;
        ul,a
            text-decoration none
        .common__course-list 
            margin-top: 14px;
            padding: 0 10px 8px;
            font-size: 0;
            list-style none
            .common__course-item 
                display: inline-block;
                margin-bottom: 10px;
                width: 50%;
                vertical-align: top;
                .common__course-link 
                    display: block;
                    border-radius: 4px;
                    padding-bottom: 10px;
                    font-size: 0;
                    .common__course-cover-wrap 
                        overflow: hidden;
                        position: relative;
                        border-radius: 4px;
                        padding-top: 56%;
                        width: 100%;
                        .common__course-cover 
                            position: absolute;
                            top: 0;
                            left: 0;
                            border-radius: 4px;
                            width: 98%;
                            height: 100%;
                    .common__course-title 
                        margin-top: 7px;
                        padding: 0 4px;
                        height: 40px;
                        font-size: 16px;
                        line-height: 20px;
                        color: #000;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        display: -webkit-box;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;
                        word-wrap: break-word;
                .common__course-price 
                    padding-left: 4px;
                    margin-top: 5px;
                    font-size: 14px;
                    line-height: 14px;
                    color: #23b8ff

                





                            


        
